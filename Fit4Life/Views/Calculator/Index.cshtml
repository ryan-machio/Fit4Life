@model Fit4Life.Models.Calculator
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>

</head>
<body>
    <h2>BMR Calculator</h2>
    <div class="row">
        @using (Html.BeginForm("/Index", "Calculator", FormMethod.Post))
        {
            <div class="form-group">
                <label for="no1">No 1</label>
                <input type="text" class="form-control" id="no1" name="no1" value="@Model.no1" />
            </div>


            <div class="form-group">
                <label for="no2">No2</label>
                <input type="text" class="form-control" id="no2" name="no2" value="@Model.no2" />
            </div>

            <div class="form-group">
                <label for="total">Total</label>
                <input type="text" class="form-control" id="total" name="total" value="@Model.total" />
            </div>


            <button type="submit" class="btn btn-info" id="add" value="add" name="calculate">+</button>

        }
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}